{
  "global": {
    "backup_base_dir": "./backups",
    "log_dir": "./logs",
    "s3_endpoint": "https://s3.us-east-1.wasabisys.com",
    "s3_region": "us-east-1",
    "temp_cleanup": true
  },
  "sites": [
    {
      "___________": "======================== SITE 1 START ========================",
      "_comment": "WordPress with bind mounts | Date placeholders: {date}, {year}, {month}, {day}, {timestamp}",
      "site_id": "wordpress-bind-example",
      "site_name": "WordPress with Bind Mounts",
      "enabled": true,
      "backup_frequency": "daily",
      "retention": {
        "type": "count",
        "value": 7,
        "description": "Keep last 7 backups"
      },
      "s3": {
        "bucket": "my-backups",
        "path": "docker-volumes/{date}/wordpress-bind"
      },
      "volumes": [
        {
          "type": "bind",
          "path": "/sites/example.com/docker-compose.yml",
          "name": "docker_compose",
          "description": "Docker Compose configuration file"
        },
        {
          "type": "bind",
          "path": "/sites/example.com/.env",
          "name": "env_file",
          "description": "Environment variables file"
        },
        {
          "type": "bind",
          "path": "/sites/example.com/mariadb-data",
          "name": "mariadb_data",
          "description": "MariaDB database files"
        },
        {
          "type": "bind",
          "path": "/sites/example.com/web",
          "name": "wordpress_web",
          "description": "WordPress site files"
        },
        {
          "type": "bind",
          "path": "/sites/example.com/apache-config.conf",
          "name": "apache_config",
          "description": "Apache config file"
        },
        {
          "type": "bind",
          "path": "/sites/example.com/php.ini",
          "name": "php_config",
          "description": "PHP config file"
        }
      ],
      "____________": "======================== SITE 1 END =========================="
    },
    {
      "___________": "======================== SITE 2 START ========================",
      "_comment": "Docker named volumes | Retention by days instead of count",
      "site_id": "app-docker-volumes",
      "site_name": "App with Docker Volumes",
      "enabled": false,
      "backup_frequency": "daily",
      "retention": {
        "type": "days",
        "value": 30,
        "description": "Keep backups for 30 days"
      },
      "s3": {
        "bucket": "my-backups",
        "path": "docker-volumes/{year}/{month}/app-volumes"
      },
      "volumes": [
        {
          "type": "volume",
          "name": "app_data",
          "description": "Application data (Docker volume)"
        },
        {
          "type": "volume",
          "name": "app_db",
          "description": "Database volume (Docker volume)"
        }
      ],
      "____________": "======================== SITE 2 END =========================="
    }
  ]
}
